# Environment Configuration

# Application
APP_NAME=DEV-lldp-topomon
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_SECRET_KEY=change-this-to-random-string

# Database
DATABASE_URL=postgresql://topomon:password@db:5432/topomon

# Redis
REDIS_URL=redis://redis:6379

# SNMP Settings
SNMP_DEFAULT_COMMUNITY=public
SNMP_TIMEOUT=5
SNMP_RETRIES=2

# Collector Settings
COLLECTOR_INTERVAL=300
COLLECTOR_CONCURRENT=20

# Log Export (Optional)
LOG_EXPORT_ENABLED=false
LOG_EXPORT_TYPE=elasticsearch

# Elasticsearch (if LOG_EXPORT_TYPE=elasticsearch)
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PREFIX=topomon-

# Graylog GELF (if LOG_EXPORT_TYPE=graylog)
GRAYLOG_HOST=graylog
GRAYLOG_PORT=12201
GRAYLOG_PROTOCOL=udp
